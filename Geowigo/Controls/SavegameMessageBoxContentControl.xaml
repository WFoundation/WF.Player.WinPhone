<UserControl x:Name="This" x:Class="Geowigo.Controls.SavegameMessageBoxContentControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <ScrollViewer x:Name="LayoutRoot">
    
		<StackPanel Margin="10,0,30,0">
			<TextBlock TextWrapping="Wrap" Text="A new savegame has been created." Style="{StaticResource MessageBoxDefaultTextStyle}" Margin="0,0,0,15"/>
			<Grid Height="72" Width="440">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="0.184*"/>
					<ColumnDefinition Width="0.816*"/>
				</Grid.ColumnDefinitions>
				<Rectangle Stroke="Black" Fill="{Binding HashBrush, ElementName=This}" Margin="0,1,11,1"/>
				<StackPanel d:LayoutOverrides="Height" Grid.Column="2">
					<TextBox TextWrapping="Wrap" Text="{Binding Name, ElementName=This, Mode=TwoWay}"/>
				</StackPanel>
			</Grid>

		</StackPanel>
	</ScrollViewer>
</UserControl>
