<UserControl x:Class="Geowigo.Controls.ImageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480"
    x:Name="ThisIC">
    
    <ScrollViewer x:Name="LayoutRoot" Background="{x:Null}" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled">
        <StackPanel>
            <Image x:Name="InnerImage" Source="{Binding Source, ElementName=ThisIC}" Stretch="Fill" RenderTransformOrigin="0.5,0" HorizontalAlignment="Center" Loaded="OnImageControlLoaded"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>